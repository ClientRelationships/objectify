{
  "name": "objectify",
  "version": "1.0.0",
  "description": "Serialise and deserialise JavaScript objects in TypeScript.",
  "main": "dist/index.js",
  "scripts": {
    "test": "./node_modules/.bin/mocha test --reporter spec",
    "build": "rm -rf dist && perl -pi -e 's/\r\n|\n|\r/\n/g' ./node_modules/uglifyjs-folder/cli.js && ./node_modules/.bin/tsc && ./node_modules/.bin/uglifyjs-folder dist -e -x .js -o dist",
    "postinstall": "npm run build",
    "watch": "rm -rf dist && ./node_modules/.bin/tsc --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jadaradix/objectify.git"
  },
  "author": "James Garner <j@jada.io> (http://jada.io/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jadaradix/objectify/issues"
  },
  "dependencies": {
    "typescript": "^2.0.3",
    "uglifyjs-folder": "0.3.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "mocha": "^3.1.0"
  }
}
